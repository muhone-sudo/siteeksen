# Çevresel Değişkenler - Örnek

# ============ BACKEND ============

# Veritabanı
DB_HOST=localhost
DB_PORT=5432
DB_USER=siteeksen
DB_PASSWORD=your_secure_password_here
DB_NAME=siteeksen

# JWT
JWT_SECRET=your_jwt_secret_minimum_32_characters_here
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# Redis
REDIS_URL=redis://localhost:6379/0

# Kafka
KAFKA_BROKERS=localhost:9092

# ============ ÖDEME (iyzico) ============

# Sandbox için
IYZICO_API_KEY=sandbox-your-api-key
IYZICO_SECRET_KEY=sandbox-your-secret-key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# Production için (canlıda değiştirin)
# IYZICO_BASE_URL=https://api.iyzipay.com

# ============ BİLDİRİM (Firebase) ============

FIREBASE_PROJECT_ID=siteeksen-app
GOOGLE_APPLICATION_CREDENTIALS=/path/to/firebase-service-account.json

# ============ ADMIN PANELİ ============

NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_characters

# ============ MOBİL ============

# .env.development
API_BASE_URL=http://10.0.2.2:8000/api/v1

# .env.production  
# API_BASE_URL=https://api.siteeksen.com/v1

# ============ PRODUCTION ============

# SSL/TLS
SSL_CERT_PATH=/etc/letsencrypt/live/siteeksen.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/siteeksen.com/privkey.pem

# Monitoring
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=info

# ============ CLOUD (Kubernetes Secrets) ============

# Bu değerler K8s secrets olarak saklanmalı:
# kubectl create secret generic db-credentials \
#   --from-literal=host=your-db-host \
#   --from-literal=username=siteeksen \
#   --from-literal=password=your_password

# kubectl create secret generic app-secrets \
#   --from-literal=jwt-secret=your_jwt_secret \
#   --from-literal=nextauth-secret=your_nextauth_secret

# kubectl create secret generic iyzico-credentials \
#   --from-literal=api-key=your_api_key \
#   --from-literal=secret-key=your_secret_key
